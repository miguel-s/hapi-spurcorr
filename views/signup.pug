extends ./layouts/base.pug

append head
  title Signup
  style.
    body {
      padding-top: 40px;
    }

block content
  div.cotainer
    div.row
      div.col-md-4.col-md-offset-4
        h1 Signup
    div.row
      div.col-md-4.col-md-offset-4
        if message
          div= message
    div.row
      div.col-md-4.col-md-offset-4
        form(action="/signup" method="post")
          div.form-group
            label(for="email") Email
            input(type="email" id="email" name="email" placeholder='Email' value=email).form-control
          div.form-group
            label(for="password") Password
            input(type="password" id="password" name="password" placeholder='Password').form-control
          button(type="submit").btn.btn-primary Signup
    div.row
      div.col-md-4.col-md-offset-4
        hr
        p Already have an account?
          | #{" "}
          a(href="/login") login
        p Or go
          | #{" "}
          a(href="/") home
          | .

append scripts